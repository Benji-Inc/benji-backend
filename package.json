{
  "name": "benji-backend",
  "description": "parse-server for benji app",
  "scripts": {
    "clean": "rm -rf dist && mkdir dist",
    "build": "npm run clean && babel -d ./dist ./src -s",
    "postinstall": "npm run build",
    "start": "node ./dist/index.js",
    "heroku-prebuild": "echo $IOS_PFX_CERTIFICATE_BASE_64 | base64 --decode > key.p12",
    "dev:watch": "nodemon --watch 'src/**/*' -e js,json --exec 'npm run dev:src'",
    "dev:src": "babel-node src",
    "dev:dist": "npm run build && nodemon ./dist/index.js",
    "pretest": "MONGODB_VERSION=4.2.3 mongodb-runner start",
    "test": "jest --detectOpenHandles --no-cache",
    "posttest": "mongodb-runner stop",
    "linter": "eslint \"./src/**/*.js\"",
    "linter:fix": "eslint \"./src/**/*.js\" --fix"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "dotenv": "^8.2.0",
    "extendable-error-class": "^0.1.2",
    "mongoose": "^5.9.6",
    "parse-server": "^4.1.0",
    "tcp-port-used": "^1.0.1",
    "twilio": "^3.41.1",
    "twilio-chat": "^3.3.4",
    "uuid": "^3.4.0",
    "validator": "^12.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-strict-mode": "^7.8.3",
    "@babel/preset-env": "^7.9.0",
    "@babel/register": "^7.9.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "faker": "^4.1.0",
    "jest": "^25.2.4",
    "jest-dev-server": "^4.4.0",
    "mongodb-runner": "^4.8.0",
    "nodemon": "^2.0.2"
  }
}
